<div class="align">
	<div class="grid">

		<form action="/" method="post" class="form login">

			<div class="login__header">
				<h3 class="login__title">회원가입</h3>
			</div>

			<div class="login__body">
				<div class="form__field">
					<input type="text" placeholder="아이디를 입력해주세요." required>
