<link rel="stylesheet" type="text/css" href="/css/shop/list.css"/>

<input type="hidden" id="type" value="<%=type%>" />

<!--동물,지역 선택 부분 <div id="select-section"> -->
<section class="one-section" style="margin-top: 50px;">
	<h4 class="select-animal-title">동물선택</h4>
	<ul class="animal-list">
		<li class="active" data-type="0">전체</li>
		<li data-type="1">거북이</li>
		<li data-type="2">고슴도치</li>
		<li data-type="3">앵무새</li>
		<li data-type="4">토끼</li>
		<li data-type="5">패럿</li>
		<li data-type="6">햄스터</li>
	</ul>
</section>

<div class="search-div">
	<button class="search-bt" type="button" onclick="search()">검색</button>
</div>

<section class="one-section" style="margin-top: 50px;">
	<div>
		<h3 class="one-section-title">SHOP</h3>
		<select class="search-filter">
			<option>최신등록</option>
			<option>조회</option>
		</select>
	</div>

	<section class="box-area" style="text-align: center; position: relative; top: -20px;">
		<%

		for(var i=0; i<shopList.length; i++) {
			%>
		<div class="hospital-item" data-hospital-id="<%=shopList[i].idx%>" data-link="<%=shopList[i].site%>">
			<div class="hospital-area">
				<div class="item-top">
					<div class="img" style="background:url('<%=shopList[i].image%>')"></div>
				</div>
			</div>
		</div>
		<%
		}
 %>
	</section>
	<div class="pagination">
		<%
		var countList = 12;
		var countPage = 5;
		var totalPage = parseInt(count / countList);

		if (count % countList > 0) {
			totalPage++;
		}

		if (totalPage < page) {
			page = totalPage;
		}
		var startPage = parseInt(((page - 1) / 10) * 10 + 1);
		var endPage = startPage + countPage - 1;

		if (endPage > totalPage) {
			endPage = totalPage;
		}

		if (startPage > 1) {
		%><a href="?page=1&type=<%=type%>">처음</a><%
		}

		if (page > 1) {
		%><a href="?page=<%=(page - 1)%>&type=<%=type%>">이전</a><%
		}

		for (var iCount = startPage; iCount <= endPage; iCount++) {
		if (iCount == page) {
		%><b><%=iCount%></b><%
		} else {
		%>
		<%=iCount%>
		<%
		}
		}

		if (page < totalPage) {
		%><a href="?page=<%=(page + 1) %>&type=<%=type%>">다음</a><%
		}

		if (endPage < totalPage) {
		%><a href="?page=<%=totalPage%>&type=<%=type%>">끝</a><%
		}
		%>
	</div>
</section>

<script type="text/javascript" src="/js/shop/list.js"></script>