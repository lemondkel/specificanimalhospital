			<hr class="detail-hr"/>

			<div style="width: 100%; display: inline-block;">
				<%
				if(hospitalScrapList.length !== 0) {
				for(var i = 0; i < hospitalScrapList.length; i++) {
				%>
				<div class="hospital-item mypage-hospital-item" data-hospital-id="<%= hospitalScrapList[i].idx %>">
					<div class="hospital-area">
						<div class="item-top">
							<div class="img"><%= hospitalScrapList[i].title %></div>
						</div>
						<div class="item-bottom">
							<div class="desc">
								<span class="desc-label">이름</span>
								<span class="desc-value"><%= hospitalScrapList[i].title %></span>
							</div>
							<div class="desc">
								<span class="desc-label">주소</span>
								<span class="desc-value"><%= hospitalScrapList[i].address %></span>
							</div>
							<div class="desc">
								<span class="desc-label">번호</span>
								<span class="desc-value"><%= hospitalScrapList[i].phone %></span>
							</div>
							<br/>
							<div class="desc">
								<span class="desc-label">대상</span>
								<span class="desc-value">
						<ul class="animal-type-list">
							<%
								var animals = hospitalScrapList[i].animals.split(',');
							for(var j = 0; j < animals.length; j++) {
							%>

							<li>
								<i class="animal-type animal-type-<%= animals[j] %>"></i>
							</li>
							<%
							}
							%>
						</ul>
					</span>
							</div>
						</div>
					</div>
				</div>
				<%
				}
				}
				%>
